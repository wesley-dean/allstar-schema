  "description": "The schema for OpenSSF's Allstar organizational configuration",
  "type": "object",
  "properties": {
    "issueLabel": {
      "$ref": "#/definitions/IssueLabel"
    },
    "issueRepo": {
      "$ref": "#/definitions/IssueRepo"
    },
    "issueFooter": {
      "$ref": "#/definitions/IssueFooter"
    },
